{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run android|ios on device|emulator",
            "type": "cordova",
            "request": "launch",
            "platform": "android|ios",
            "target": "device|emulator",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Simulate android|ios in browser",
            "type": "cordova",
            "request": "launch",
            "platform": "android|ios",
            "target": "chrome",
            "simulatePort": 8000,
            "livereload": true,
            "cwd": "${workspaceRoot}",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "outFiles": [
                "${workspaceRoot}/out/**/*.js"
            ]
        }
    ]
}